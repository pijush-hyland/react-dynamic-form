{
  "name": "Quote Request",
  "isForm": "true",
  "description": "Multi-stage quote request form",
  "hideName": true,
  "stages": [
    {
      "name": "directions",
      "type": "stage",
      "fields": [
        {
          "name": "freightType",
          "isField": "true",
          "type": "select",
          "options": ["Ocean", "Air"],
          "required": true,
          "validation": [
            { "type": "Required", "message": "Freight Type is required." }
          ]
        },
        {
          "name": "direction",
          "isField": "true",
          "type": "select",
          "options": ["Import", "Export"],
          "required": true,
          "validation": [
            { "type": "Required", "message": "Direction is required." }
          ]
        }
      ]
    },
    {
      "name": "containerDetails",
      "type": "stage",
      "fields": [
        {
          "name": "containerLoadType",
          "label": "Container Load Type",
          "isField": "true",
          "type": "select",
          "options": ["FCL", "LCL"],
          "required": true,
          "validation": [
            {
              "type": "Required",
              "message": "Container LoadType (FCL/LCL) is required."
            }
          ]
        },
        {
          "name": "containerTypes",
          "isGroup": "true",
          "fields": [
            {
              "name": "containerType",
              "isField": "true",
              "type": "select",
              "hiddenLabel": true,
              "options": [
                "Dry Storage Containers",
                "Refrigerated Containers",
                "Open Top Containers",
                "Flat Rack Containers",
                "Tank Containers",
                "Double Door Containers",
                "Side Open Containers",
                "Half-Height Containers"
              ],
              "required": true,
              "validation": [
                { "type": "Required", "message": "Container Type is required." }
              ]
            },
            {
              "name": "containerSizeReference",
              "isField": "true",
              "type": "select",
              "hiddenLabel": true,
              "options": {
                "Dry Storage Containers": [
                  "20ft Standard",
                  "40ft Standard",
                  "40ft High Cube"
                ],
                "Refrigerated Containers": ["20ft Reefer", "40ft Reefer"],
                "Open Top Containers": ["20ft Open Top", "40ft Open Top"],
                "Flat Rack Containers": ["20ft Flat Rack", "40ft Flat Rack"],
                "Tank Containers": ["ISO Tank"],
                "Double Door Containers": ["20ft Tunnel", "40ft Tunnel"],
                "Side Open Containers": ["20ft Side", "40ft Side"],
                "Half-Height Containers": ["Half-Height"]
              },
              "optionsDependentOn": "containerType",
              "required": true,
              "validation": [
                {
                  "type": "Required",
                  "message": "Container Size Reference is required."
                }
              ]
            }
          ]
        },
        {
          "name": "numberOfContainers",
          "isField": "true",
          "type": "number",
          "max": 100,
          "min": 1,
          "step": 1,
          "required": true,
          "validation": [
            {
              "type": "Required",
              "message": "Number of Containers is required."
            }
          ]
        },
        {
          "name": "wightOfOneContainer",
          "label": "Weight of 1 Container (kgs)",
          "isField": "true",
          "type": "number",
          "max": 50000,
          "min": 1,
          "step": 0.01,
          "rightIcon": "kg",
          "required": true,
          "validation": [
            {
              "type": "Required",
              "message": "Weight of 1 Container (kgs) is required."
            }
          ]
        },
        {
          "name": "wightGrossOrChargeable",
          "isField": "true",
          "label": "Weight Gross or Chargeable (kgs)",
          "rightIcon": "kg",
          "isReadOnly": true,
          "valueCalculation": "{return values.wightOfOneContainer * values.numberOfContainers}"
        },
        {
          "name": "cargoDimensions",
          "label": "Cargo Dimensions (L x W x H)",
          "isGroup": "true",
          "fields": [
            {
              "name": "length",
              "isField": "true",
              "type": "number",
              "placeholder": "Length",
              "hiddenLabel": true,
              "max": 500,
              "min": 1,
              "step": 0.01,
              "rightIcon": "In.",
              "required": true,
              "validation": [
                { "type": "Required", "message": "Length is required." }
              ]
            },
            {
              "name": "width",
              "isField": "true",
              "type": "number",
              "placeholder": "Width",
              "hiddenLabel": true,
              "max": 500,
              "min": 1,
              "step": 0.01,
              "rightIcon": "In.",
              "required": true,
              "validation": [
                { "type": "Required", "message": "Width is required." }
              ]
            },
            {
              "name": "height",
              "isField": "true",
              "type": "number",
              "placeholder": "height",
              "hiddenLabel": true,
              "max": 500,
              "min": 1,
              "step": 0.01,
              "rightIcon": "In.",
              "required": true,
              "validation": [
                { "type": "Required", "message": "Height is required." }
              ]
            }
          ]
        },
        {
          "name": "CBM",
          "label": "CBM (Cubic Meter)",
          "isField": "true",
          "type": "number",
          "isReadOnly": true,
          "valueCalculation": "{return ((values.cargoDimensions.length * values.cargoDimensions.width * values.cargoDimensions.height))}"
        }
      ]
    },
    {
      "name": "shipmentDetails",
      "type": "stage",
      "fields": [
        {
          "name": "shipmentType",
          "isField": "true",
          "type": "select",
          "options": [
            "General Cargo",
            "Containerized Cargo",
            "Dry Bulk Cargo",
            "Liquid Bulk Cargo",
            "Project Cargo",
            "RO-Ro Cargo",
            "Hazardous Cargo",
            "Refer Cargo",
            "Air Cargo",
            "Livestock Cargo",
            "Specialized Cargo"
          ],
          "required": true,
          "validation": [
            {
              "type": "Required",
              "message": "Shipment Type is required."
            }
          ]
        },
        {
          "name": "originLocation",
          "isGroup": "true",
          "fields": [
            {
              "name": "originCountry",
              "isField": "true",
              "type": "select",
              "placeholder": "Origin Country",
              "hiddenLabel": true,
              "options": [
                "USA",
                "Canada",
                "Mexico",
                "UK",
                "Germany",
                "France",
                "China",
                "Japan"
              ],
              "required": true,
              "validation": [
                {
                  "type": "Required",
                  "message": "Origin Country is required."
                }
              ]
            },
            {
              "name": "originPort",
              "isField": "true",
              "type": "select",
              "placeholder": "Origin Port",
              "hiddenLabel": true,
              "options": {
                "USA": ["Los Angeles", "New York", "Miami"],
                "Canada": ["Vancouver", "Toronto", "Montreal"],
                "Mexico": ["Manzanillo", "Veracruz", "Altamira"],
                "UK": ["London", "Liverpool", "Southampton"],
                "Germany": ["Hamburg", "Bremen", "Dusseldorf"],
                "France": ["Marseille", "Le Havre", "Nice"],
                "China": ["Shanghai", "Shenzhen", "Guangzhou"],
                "Japan": ["Tokyo", "Osaka", "Yokohama"]
              },
              "optionsDependentOn": "originCountry",
              "required": true,
              "validation": [
                {
                  "type": "Required",
                  "message": "Origin Port is required."
                }
              ]
            }
          ]
        },
        {
          "name": "destinationLocation",
          "isGroup": "true",
          "fields": [
            {
              "name": "destinationCountry",
              "isField": "true",
              "type": "select",
              "placeholder": "Dest. Country",
              "hiddenLabel": true,
              "options": [
                "USA",
                "Canada",
                "Mexico",
                "UK",
                "Germany",
                "France",
                "China",
                "Japan"
              ],
              "required": true,
              "validation": [
                {
                  "type": "Required",
                  "message": "Destination Country is required."
                }
              ]
            },
            {
              "name": "destinationPort",
              "isField": "true",
              "type": "select",
              "placeholder": "Dest. Port",
              "hiddenLabel": true,
              "optionsDependentOn": "destinationCountry",
              "options": {
                "USA": ["Los Angeles", "New York", "Miami"],
                "Canada": ["Vancouver", "Toronto", "Montreal"],
                "Mexico": ["Manzanillo", "Veracruz", "Altamira"],
                "UK": ["London", "Liverpool", "Southampton"],
                "Germany": ["Hamburg", "Bremen", "Dusseldorf"],
                "France": ["Marseille", "Le Havre", "Nice"],
                "China": ["Shanghai", "Shenzhen", "Guangzhou"],
                "Japan": ["Tokyo", "Osaka", "Yokohama"]
              },
              "required": true,
              "validation": [
                {
                  "type": "Required",
                  "message": "Destination Port is required."
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "name": "additionalDetails",
      "type": "stage",
      "fields": [
        {
          "name": "specialInstructions",
          "isField": "true",
          "type": "textarea",
          "placeholder": "Special Instructions (if any)",
          "maxLength": 500
        },
        {
          "name": "contactInformation",
          "isGroup": "true",
          "fields": [
            {
              "name": "contactName",
              "isField": "true",
              "type": "text",
              "placeholder": "Contact Name",
              "required": true,
              "validation": [
                { "type": "Required", "message": "Contact Name is required." }
              ]
            },
            {
              "name": "contactEmail",
              "isField": "true",
              "type": "email",
              "placeholder": "Contact Email",
              "required": true,
              "validation": [
                {
                  "type": "Required",
                  "message": "Contact Email is required."
                },
                {
                  "type": "Email",
                  "message": "Please enter a valid email address."
                }
              ]
            },
            {
              "name": "contactPhoneNumber",
              "isField": "true",
              "type": "tel",
              "placeholder": "+1 (123) 456-7890"
            }
          ]
        }
      ]
    },
    {
      "name": "commodityDetails",
      "type": "stage",
      "fields": [
        {
          "name": "commodityType",
          "isField": "true",
          "type": "select",
          "options": [
            "Electronics",
            "Machinery",
            "Automobile Parts",
            "Textiles",
            "Garments",
            "Footwear",
            "Furniture",
            "Household Goods",
            "Pharmaceuticals",
            "Medical Equipment",
            "Chemicals",
            "Paints and Coatings",
            "Batteries",
            "Plastic Products",
            "Rubber Goods",
            "Paper and Pulp",
            "Books and Stationery",
            "Toys and Games",
            "Sports Equipment",
            "Foodstuffs",
            "Beverages",
            "Grains",
            "Seeds",
            "Sugar",
            "Salt",
            "Flour",
            "Coffee",
            "Tea",
            "Spices",
            "Fruits",
            "Vegetables",
            "Frozen Foods",
            "Meat",
            "Seafood",
            "Dairy Products",
            "Livestock",
            "Animal Feed",
            "Fertilizers",
            "Cement",
            "Steel Products",
            "Iron Ore",
            "Coal",
            "Timber",
            "Wood Products",
            "Glassware",
            "Construction Materials",
            "Textile Raw Materials",
            "Crude Oil",
            "Refined Petroleum",
            "Natural Gas",
            "Lubricants",
            "Cosmetics",
            "Detergents and Soaps",
            "Cleaning Products",
            "Jewelry",
            "Precious Metals",
            "Artwork",
            "Industrial Equipment",
            "Tools",
            "Pipes and Tubes",
            "Cables",
            "Wires",
            "Containers",
            "Packaging Materials",
            "Adhesives",
            "Explosives",
            "Inks and Dyes",
            "Tobacco Products",
            "Alcoholic Beverages",
            "Bicycles",
            "Motorcycles",
            "Aircraft Parts",
            "Ship Parts",
            "Clothing Accessories"
          ],
          "required": true,
          "validation": [
            {
              "type": "Required",
              "message": "Commodity Type is required."
            }
          ]
        },
        {
          "name": "INCOTERMS",
          "isField": "true",
          "type": "select",
          "options": [
            "EXW",
            "FCA",
            "CPT",
            "CIP",
            "DAP",
            "DPU",
            "DDP",
            "FOB",
            "CFR",
            "CIF"
          ],
          "required": true,
          "validation": [
            {
              "type": "Required",
              "message": "INCOTERMS is required."
            }
          ]
        },
        {
          "name": "numberOfPieces",
          "isField": "true",
          "type": "number",
          "max": 10000,
          "min": 1,
          "step": 1,
          "required": true,
          "validation": [
            {
              "type": "Required",
              "message": "Number of Pieces is required."
            }
          ]
        },
        {
          "name": "specialHandlings",
          "isField": "true",
          "type": "select",
          "options": ["DG cargo", "Temperature control", "None"],
          "required": true,
          "validation": [
            {
              "type": "Required",
              "message": "Special Handlings is required."
            }
          ]
        }
      ]
    },
    {
      "name": "reviewSubmission",
      "type": "stage",
      "fields": [
        {
          "name": "directions",
          "isSection": "true",
          "label": "Review Your Directions",
          "fields": [
            {
              "name": "freightType",
              "isField": "true",
              "isReadOnly": true,
              "valueCalculation": "{return values.freightType}"
            },
            {
              "name": "direction",
              "isField": "true",
              "isReadOnly": true,
              "valueCalculation": "{return values.direction}"
            }
          ]
        },
        {
          "name": "containerDetails",
          "isSection": "true",
          "label": "Review Your Container Details",
          "fields": [
            {
              "name": "containerLoadType",
              "isField": "true",
              "isReadOnly": true,
              "valueCalculation": "{return values.containerLoadType}"
            },
            {
              "name": "containerType",
              "isField": "true",
              "isReadOnly": true,
              "valueCalculation": "{return values.containerTypes.containerType}"
            },
            {
              "name": "containerSizeReference",
              "isField": "true",
              "isReadOnly": true,
              "valueCalculation": "{return values.containerTypes.containerSizeReference}"
            },
            {
              "name": "numberOfContainers",
              "isField": "true",
              "isReadOnly": true,
              "valueCalculation": "{return values.numberOfContainers}"
            },
            {
              "name": "wightOfOneContainer",
              "isField": "true",
              "isReadOnly": true,
              "valueCalculation": "{return values.wightOfOneContainer}"
            },
            {
              "name": "wightGrossOrChargeable",
              "isField": "true",
              "isReadOnly": true,
              "valueCalculation": "{return values.wightGrossOrChargeable}"
            },
            {
              "name": "cargoDimensions",
              "isGroup": "true",
              "label": "Cargo Dimensions (L x W x H)",
              "fields": [
                {
                  "name": "length",
                  "isField": "true",
                  "isReadOnly": true,
                  "hiddenLabel": true,
                  "valueCalculation": "{return values.cargoDimensions.length}"
                },
                {
                  "name": "width",
                  "isField": "true",
                  "isReadOnly": true,
                  "hiddenLabel": true,
                  "valueCalculation": "{return values.cargoDimensions.width}"
                },
                {
                  "name": "height",
                  "isField": "true",
                  "isReadOnly": true,
                  "hiddenLabel": true,
                  "valueCalculation": "{return values.cargoDimensions.height}"
                }
              ]
            },
            {
              "name": "CBM",
              "isField": "true",
              "isReadOnly": true,
              "label": "CBM (Cubic Meter)",
              "valueCalculation": "{return values.CBM}"
            }
          ]
        },
        {
          "name": "shipmentDetails",
          "isSection": "true",
          "label": "Review Your Shipment Details",
          "fields": [
            {
              "name": "shipmentType",
              "isField": "true",
              "isReadOnly": true,
              "valueCalculation": "{return values.shipmentType}"
            },
            {
              "name": "originLocation",
              "isGroup": "true",
              "label": "Origin Location",
              "fields": [
                {
                  "name": "originCountry",
                  "isField": "true",
                  "isReadOnly": true,
                  "hiddenLabel": true,
                  "valueCalculation": "{return values.originLocation.originCountry}"
                },
                {
                  "name": "originPort",
                  "isField": "true",
                  "isReadOnly": true,
                  "hiddenLabel": true,
                  "valueCalculation": "{return values.originLocation.originPort}"
                }
              ]
            },
            {
              "name": "destinationLocation",
              "isGroup": "true",
              "label": "Destination Location",
              "fields": [
                {
                  "name": "destinationCountry",
                  "isField": "true",
                  "isReadOnly": true,
                  "hiddenLabel": true,
                  "valueCalculation": "{return values.destinationLocation.destinationCountry}"
                },
                {
                  "name": "destinationPort",
                  "isField": "true",
                  "isReadOnly": true,
                  "hiddenLabel": true,
                  "valueCalculation": "{return values.destinationLocation.destinationPort}"
                }
              ]
            }
          ]
        },
        {
          "name": "commodityDetails",
          "isSection": "true",
          "label": "Review Your Commodity Details",
          "fields": [
            {
              "name": "commodityType",
              "isField": "true",
              "isReadOnly": true,
              "valueCalculation": "{return values.commodityType}"
            },
            {
              "name": "INCOTERMS",
              "isField": "true",
              "isReadOnly": true,
              "valueCalculation": "{return values.INCOTERMS}"
            },
            {
              "name": "numberOfPieces",
              "isField": "true",
              "isReadOnly": true,
              "valueCalculation": "{return values.numberOfPieces}"
            },
            {
              "name": "specialHandlings",
              "isField": "true",
              "isReadOnly": true,
              "valueCalculation": "{return values.specialHandlings}"
            }
          ]
        }
      ]
    }
  ]
}
